<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.chitrahaar.darshan.MainActivityFragment"
    tools:showIn="@layout/content_main">

    <GridView
        android:id="@+id/movies_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:numColumns="2"
        android:stretchMode="columnWidth"
        android:gravity="center"

        />
    <ProgressBar android:id="@+id/arProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"></ProgressBar>

    <TextView
        android:id="@+id/movie_grid_empty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:drawablePadding="@dimen/element_margin"
        android:padding="@dimen/activity_horizontal_margin"
        android:drawableBottom="@mipmap/ic_wifi"
        android:visibility="gone"
        android:text="@string/not_connected_snackbar_message"
        />

</RelativeLayout>
